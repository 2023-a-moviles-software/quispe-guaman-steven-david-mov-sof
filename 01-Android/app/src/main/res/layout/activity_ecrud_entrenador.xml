<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ECrudEntrenador">

    <Button
        android:id="@+id/btn_crear_bdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Crear"
        app:layout_constraintTop_toBottomOf="@+id/input_descripcion"
        tools:layout_editor_absoluteX="156dp" />

    <Button
        android:id="@+id/btn_buscar_bdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Buscar"
        app:layout_constraintEnd_toStartOf="@+id/btn_crear_bdd"
        tools:layout_editor_absoluteY="453dp" />

    <Button
        android:id="@+id/btn_actualizar_bdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Actualizar"
        app:layout_constraintStart_toEndOf="@+id/btn_crear_bdd"
        tools:layout_editor_absoluteY="453dp" />

    <Button
        android:id="@+id/btn_eliminar_bdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="152dp"
        android:text="Eliminar"
        app:layout_constraintEnd_toEndOf="@+id/btn_actualizar_bdd"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="@+id/btn_buscar_bdd"
        app:layout_constraintTop_toBottomOf="@+id/btn_crear_bdd" />

    <EditText
        android:id="@+id/input_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ingrese id"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre"
        app:layout_constraintStart_toStartOf="@+id/input_nombre"
        tools:layout_editor_absoluteY="214dp" />

    <EditText
        android:id="@+id/input_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ingrese descripcion"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre"
        tools:layout_editor_absoluteX="82dp" />

    <EditText
        android:id="@+id/input_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ingrese nombre"
        app:layout_constraintEnd_toEndOf="@+id/input_descripcion"
        app:layout_constraintStart_toStartOf="@+id/input_descripcion"
        app:layout_constraintTop_toBottomOf="@+id/input_id" />

</androidx.constraintlayout.widget.ConstraintLayout>