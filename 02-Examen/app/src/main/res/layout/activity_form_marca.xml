<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormMarca">

    <TextView
        android:id="@+id/txt_form_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="Registrar marca"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/txt_nombre_marca"
        app:layout_constraintEnd_toEndOf="@+id/txt_nombre_marca"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="@+id/txt_nombre_marca" />

    <Button
        android:id="@+id/btn_añadir_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.724" />

    <EditText
        android:id="@+id/txt_nombre_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Nombre:"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txt_fecha_creacion"
        app:layout_constraintEnd_toEndOf="@+id/txt_fecha_creacion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_fecha_creacion" />

    <EditText
        android:id="@+id/txt_fecha_creacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Fecha de creación:"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/sw_servicioTecnico"
        app:layout_constraintEnd_toEndOf="@+id/sw_servicioTecnico"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sw_servicioTecnico" />

    <EditText
        android:id="@+id/txt_contacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Contacto:"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btn_añadir_marca"
        app:layout_constraintEnd_toEndOf="@+id/btn_añadir_marca"
        app:layout_constraintStart_toStartOf="@+id/btn_añadir_marca" />

    <Switch
        android:id="@+id/sw_servicioTecnico"
        android:layout_width="199dp"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:text="@string/switch_servicio_tecnico"
        app:layout_constraintBottom_toTopOf="@+id/txt_contacto"
        app:layout_constraintEnd_toEndOf="@+id/txt_contacto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_contacto" />
</androidx.constraintlayout.widget.ConstraintLayout>